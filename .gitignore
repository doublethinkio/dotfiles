!.xinitrc
!.Xmodmap
!.yarnrn
!.npmrc
!.zshrc
!pkglist.txt
!vconsole.conf
!vscode.custom.css
!.vimrc
!.bashrc
!.bash_profile

# Ignore all files named .DS_Store or ending with .log
**/.DS_Store
**.log

# Whitelist folder/a/b1/ and folder/a/b2/
