!.config/nvim
.config/nvim/tmp/*
.config/nvim/autoload
.config/nvim/plugged
.config/nvim/.netrwhist

!.wallpaper/wallpaper.sh

!scripts/
scripts/.wallpaper

!.local/
.local/*
!.local/share
.local/share/*
!.local/share/fcitx5/
!.local/share/fonts/
